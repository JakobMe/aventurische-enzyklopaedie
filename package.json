{
  "name": "aventurische-enzyklopaedie",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "fuse.js": "3.2.0",
    "normalize.css": "7.0.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-scripts-ts": "2.13.0"
  },
  "scripts": {
    "start": "npm-run-all -p start-css start-js",
    "start-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/ -o src/ --output-style compressed",
    "build-js": "react-scripts-ts build",
    "eject": "react-scripts-ts eject",
    "format": "prettier --single-quote --write \"src/**/*.@(ts|tsx|scss)\""
  },
  "devDependencies": {
    "@types/jest": "22.1.1",
    "@types/node": "9.4.0",
    "@types/react": "16.0.35",
    "@types/react-dom": "16.0.3",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "4.1.2",
    "prettier": "1.10.2",
    "typescript": "2.6.2"
  }
}
